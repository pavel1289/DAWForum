@model ForumProject.Models.Comment

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Comment"))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.Label("Text", "Modifica comentariul")
    @Html.TextArea("Text", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Text, "", new { @class = "text-danger" })
    @Html.HiddenFor(x => x.Date)
    <br />
    <button class="btn btn-success" type="submit">Modifica comentariul</button>
}